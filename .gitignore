    .contact {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 20px;
    }
    .contact p { margin: 8px 0; }
    .btn {
      display: inline-block;
      background: #D4AF37;
      color: #000;
      padding: 10px 15px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
    }
    footer {
      background: #2E7D32;
      color: #fff;
      text-align: center;
      padding: 15px;
      margin-top: 20px;
